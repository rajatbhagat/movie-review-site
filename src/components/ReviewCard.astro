---
import StarRating from './StarRating.astro';

interface Props {
  title: string;
  slug: string;
  rating: number;
  poster: string;
  genre: string[];
  year: number;
  excerpt: string;
}

const { title, slug, rating, poster, genre, year, excerpt } = Astro.props;
---

<article class="group bg-dark-card rounded-xl overflow-hidden border border-dark-border card-hover">
  <a href={`/reviews/${slug}`} class="block">
    <!-- Poster -->
    <div class="relative aspect-[2/3] overflow-hidden">
      <img
        src={poster}
        alt={`${title} poster`}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-dark-card via-transparent to-transparent" />

      <!-- Rating Badge -->
      <div class="absolute top-3 right-3 flex items-center gap-1 bg-dark-bg/90 backdrop-blur px-2 py-1 rounded-full">
        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        <span class="text-sm font-bold text-white">{rating}</span>
      </div>
    </div>

    <!-- Content -->
    <div class="p-4">
      <!-- Genre Tags -->
      <div class="flex flex-wrap gap-1 mb-2">
        {genre.slice(0, 2).map((g) => (
          <span class="text-xs text-primary-400 bg-primary-500/10 px-2 py-0.5 rounded">
            {g}
          </span>
        ))}
        <span class="text-xs text-gray-500">{year}</span>
      </div>

      <!-- Title -->
      <h3 class="font-display font-bold text-lg text-white group-hover:text-primary-400 transition line-clamp-2 mb-2">
        {title}
      </h3>

      <!-- Excerpt -->
      <p class="text-gray-400 text-sm line-clamp-2">
        {excerpt}
      </p>

      <!-- Star Rating -->
      <div class="mt-3">
        <StarRating rating={rating} size="sm" />
      </div>
    </div>
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
